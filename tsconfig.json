{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "types": [
      "@serwist/next/typings"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "scripts/cleanup-invoice-photos.cjs",
    "scripts/migrate-photos-signatures.cjs"
, "scripts/test-scheduling.ts", "scripts/test-scheduling.js"  ],
  "exclude": [
    "node_modules"
  ]
}
